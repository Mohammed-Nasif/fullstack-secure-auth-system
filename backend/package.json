{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready NestJS authentication API",
  "author": "Mohammed Nasif <m.khaled100@ymail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "npm run db:start && nest start --watch",
    "start": "npm run db:start && nest start",
    "start:prod": "node dist/main",
    "build": "nest build",
    "prebuild": "rimraf dist",
    "test": "jest --testPathPattern=\\.spec\\.ts$",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "docs": "compodoc -p tsconfig.json -s",
    "db:start": "docker start nest-mongo || docker run -d --name nest-mongo -p 27017:27017 -e MONGO_INITDB_ROOT_USERNAME=admin -e MONGO_INITDB_ROOT_PASSWORD=adminpass1234 -e MONGO_INITDB_DATABASE=nest-auth mongo:6.0",
    "db:stop": "docker stop nest-mongo",
    "db:remove": "docker rm -f nest-mongo",
    "db:logs": "docker logs nest-mongo",
    "health": "curl http://localhost:3000/health",
    "security:audit": "npm audit"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "fullstack-secure-auth-system": "file:..",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "mongoose": "^8.16.5",
    "nest-winston": "^1.10.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.17.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^5.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
