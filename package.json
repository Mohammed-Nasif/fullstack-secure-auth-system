{
  "name": "fullstack-secure-auth-system",
  "version": "1.0.0",
  "description": "Fullstack Secure Authentication System with NestJS, React, TypeScript and MongoDB",
  "main": "index.js",
  "scripts": {
    "dev:backend": "npm --prefix backend run start:dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "install:all": "npm install && npm --prefix backend install && npm --prefix frontend install",
    "build:backend": "npm --prefix backend run build",
    "build:frontend": "npm --prefix frontend run build",
    "build": "npm run build:backend && npm run build:frontend",
    "start:backend": "npm --prefix backend run start:prod",
    "start:frontend": "npm --prefix frontend run preview",
    "test:backend": "npm --prefix backend run test",
    "test:frontend": "npm --prefix frontend run test",
    "test": "npm run test:backend && npm run test:frontend",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "clean": "rimraf backend/dist frontend/dist",
    "postinstall": "echo '\nðŸš€ Setup complete! Run npm run dev to start both servers'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0"
  },
  "keywords": [
    "fullstack",
    "authentication",
    "nestjs",
    "react",
    "typescript",
    "mongodb",
    "jwt",
    "security",
    "bcrypt",
    "tailwindcss"
  ],
  "author": "Mohammed Nasif <m.khaled100@ymail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohammed-nasif/fullstack-secure-auth-system.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}
